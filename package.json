    "@remix-run/serve": "^2.11.2",
    "chalk": "^5.3.0",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "csv-parse": "^5.5.6",
    "diff": "^5.2.0",
    "html-react-parser": "^5.1.12",
    "is-ip": "^5.0.1",
    "isbot": "^5.1.16",
    "marked": "14.0",
