{
  "name": "healthy-person-emulator-dotorg",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "prisma generate && remix vite:build",
    "dev": "remix vite:dev --host 0.0.0.0 --port 3000",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "seed": "npx tsx prisma/seed.ts",
    "reset:db": "npx prisma migrate reset -f && npx prisma db push",
    "typecheck": "tsc",
    "knip": "knip",
    "test": "vitest"
